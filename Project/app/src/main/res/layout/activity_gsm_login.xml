<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".GsmLogin">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="GSM Login"
        android:textColor="#E91E63"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/g_gsm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:ems="10"
        android:hint="GSM"
        android:inputType="number"
        android:textColor="#E91E63"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <EditText
        android:id="@+id/g_code"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="Code"
        android:inputType="number"
        android:textColor="#E91E63"
        app:layout_constraintEnd_toEndOf="@+id/g_gsm"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/g_sms"
        app:layout_constraintTop_toBottomOf="@+id/g_sms" />

    <Button
        android:id="@+id/g_sms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Send SMS"
        app:layout_constraintStart_toStartOf="@+id/g_gsm"
        app:layout_constraintTop_toBottomOf="@+id/g_gsm" />

    <Button
        android:id="@+id/g_valid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Code Valid"
        app:layout_constraintStart_toStartOf="@+id/g_code"
        app:layout_constraintTop_toBottomOf="@+id/g_code" />
</androidx.constraintlayout.widget.ConstraintLayout>